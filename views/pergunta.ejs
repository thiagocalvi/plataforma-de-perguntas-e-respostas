<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo%></h1>
        <p><%= pergunta.descricao%></p>
        <h6>Criado em - <%= pergunta.createdAt%></h6>
        <hr>
        <form  method="POST" action="/responder">
            <h3>Responda</h3>
            <label>Resposta</label>
            <textarea class="form-control" placeholder="Digite sua resposta" name="corpo"></textarea>
            <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id%>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <% respostas.forEach(resp => {%>
            <br>
            <div class="card">
                <div class="card-body">
                    <p> <%= resp.corpo %>  </p>
                    <br>
                    <p> Respondido em - <%= resp.createdAt %></p>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs') %>